<div class="container mt-5">
  <h1>Gerenciamento de Usuários</h1>
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>ID</th>
        <th>Email</th>
        <th>Role</th>
        <th>Password Set</th>
        <th>Ações</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.id %></td>
          <td><%= user.email %></td>
          <td><%= user.role || 'Não definido' %></td>
          <td>
            <%= user.password_set ? 'Sim' : 'Não' %>
          </td>
          <td>
            <!-- Botão para alternar status -->
            <%= button_to 'Alterar privilégio', toggle_status_admin_user_path(user), 
                          method: :patch, class: 'btn btn-warning btn-sm' %>

            <!-- Botão para deletar -->
            <%= button_to 'Excluir', admin_user_path(user), 
                          method: :delete, data: { confirm: 'Tem certeza?' }, 
                          class: 'btn btn-danger btn-sm' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
