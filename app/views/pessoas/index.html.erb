<p style="color: green"><%= notice %></p>

<div class="container">
  <h1>Pessoas</h1>

  <!-- Filtros -->
  <form class="row g-3 mb-4" method="get">
    <div class="col-auto">
      <input type="text" class="form-control" name="nome" placeholder="Nome" value="<%= params[:nome] %>">
    </div>
    <div class="col-auto">
      <input type="text" class="form-control" name="cidade" placeholder="Cidade" value="<%= params[:cidade] %>">
    </div>
    <div class="col-auto">
      <button type="submit" class="btn btn-primary mb-3">Filtrar</button>
    </div>
  </form>

<!-- Botão para abrir o modal -->
  <button type="button" class="btn btn-primary mb-4" data-bs-toggle="modal" data-bs-target="#newPessoaModal">
    Inserir Pessoa
  </button>
  <!-- Tabela -->
  <% if @pessoas.count > 0 %>
  <table class="table table-bordered table-hover">
    <thead>
      <tr>
        <th><%= sortable "nome", "Nome" %></th>
        <th><%= sortable "cidade", "Cidade" %></th>
        <th>Email</th>
        <th>Telefone</th>
      </tr>
    </thead>
    <tbody>
      <% @pessoas.each do |pessoa| %>
        <tr>
          <td><%= pessoa.nome %></td>
          <td><%= pessoa.cidade %></td>
          <td><%= pessoa.email %></td>
          <td><%= pessoa.telefone %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <!-- Links de Paginação -->
  <%= paginate @pessoas %>
    
  <% else %>
    <h5> Nenhuma Pessoa encontrada </h5>
  <% end %> 
</div>

<!-- Modal -->
<div class="modal fade" id="newPessoaModal" tabindex="-1" aria-labelledby="newPessoaModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title text-light" id="newPessoaModalLabel">Inserir Nova Pessoa</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <%= form_with model: Pessoa.new, url: pessoas_path, local: true do |form| %>
          <div class="mb-3">
            <%= form.label :nome, class: "form-label text-light" %>
            <%= form.text_field :nome, class: "form-control" %>
          </div>
          <div class="mb-3">
            <%= form.label :endereco, class: "form-label text-light" %>
            <%= form.text_field :endereco, class: "form-control" %>
          </div>
          <div class="mb-3">
            <%= form.label :bairro, class: "form-label text-light" %>
            <%= form.text_field :bairro, class: "form-control" %>
          </div>
          <div class="mb-3">
            <%= form.label :cidade, class: "form-label text-light" %>
            <%= form.text_field :cidade, class: "form-control" %>
          </div>
          <div class="mb-3">
            <%= form.label :email, class: "form-label text-light" %>
            <%= form.email_field :email, class: "form-control" %>
          </div>
          <div class="mb-3">
            <%= form.label :telefone, class: "form-label text-light" %>
            <%= form.text_field :telefone, class: "form-control" %>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
            <%= form.submit "Salvar", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

