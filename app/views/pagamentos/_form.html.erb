        <%= form_with(model: @pagamento) do |form| %>
          <div class="row">
            <div class="col-md-6">
              <div class="mb-3">
                <%= form.label :pessoa_id, style: "display: block" %>
                 <%= form.select :pessoa_id, 
                options_from_collection_for_select(Pessoa.all.order(:nome), :id, :nome, @pagamento.pessoa_id), 
                { include_blank: true }, 
                { class: "form-select" } %>
              </div>

              <div class= "row">
              <div class="col mb-3">
                <%= form.label :vencimento, style: "display: block" %>
                <%= form.date_field :vencimento, class: "form-control" %>
              </div>

              <div class="col mb-3">
                <%= form.label :valor, style: "display: block" %>
                <%= form.text_field :valor, class: "form-control", id:"valor",type: "number", step: "0.01", min: "0.01" %>
              </div>
              </div>
            </div>

            <div class="col-md-6">
             <div class="p-3 mb-3 border border-primary rounded text-black">
              <div class="mb-3">
                <%= form.label :data_pagamento, style: "display: block" %>
                <%= form.date_field :data_pagamento, class: "form-control" %>
              </div>
             
              <div class="mb-3">
              <%= form.label :conta_id, style: "display: block" %>
              <%= form.select :conta_id, 
                options_from_collection_for_select(Conta.all.order(:descricao), :id, :descricao, @pagamento.conta_id), 
                { include_blank: true }, 
                { class: "form-select" } %>
              </div>            
              
              <div class= "row">
              <div class= "col">
              <div class="mb-2">
                <%= form.label :valor_pago, style: "display: block" %>
                <%= form.text_field :valor_pago, class: "form-control", id: "valor_pago", type: "number", step: "0.01", min: "0.01" %>
              </div>
              </div>
              <div class= "col"> 
              <div class="mb-2">
                <%= form.label :status, style: "display: block" %>
                <%= form.select :status,
                options_for_select([['Pago', 1], ['Pendente', 0]], @pagamento.status),
                { include_blank: true },
                { class: "form-select" } %>
                </div>
              </div>
              </div>

            </div>
            </div>
          </div>

          <div class="modal-footer">
            <%= form.submit 'Salvar', class: "btn btn-primary" %>
            <%= link_to "Cancelar", pagamentos_path, class: "btn btn-secondary" %>
          </div>
        <% end %>

